<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="set"
            type="com.example.workoutbasic.models.Set" />
        <import type="com.example.workoutbasic.utils.StringConverter" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setIdx"
            style="@style/TextView"
            android:text="@{StringConverter.convertInt(set.setIdx)}"
            android:layout_width="0dp"
            android:layout_weight="@dimen/set_weight"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/weight"
            style="@style/TextView"
            android:text="@{StringConverter.convertDouble(set.weight)}"
            android:layout_width="0dp"
            android:layout_weight="@dimen/weight_weight"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/reps"
            style="@style/TextView"
            android:text="@{StringConverter.convertDouble(set.reps)}"
            android:layout_width="0dp"
            android:layout_weight="@dimen/reps_weight"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/rir"
            style="@style/TextView"
            android:text="@{StringConverter.convertDouble(set.RIR)}"
            android:layout_width="0dp"
            android:layout_weight="@dimen/rir_weight"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/restSeconds"
            style="@style/TextView"
            android:text="@{StringConverter.convertRest(set.restSeconds)}"
            android:layout_width="0dp"
            android:layout_weight="@dimen/rest_weight"
            android:layout_height="wrap_content">
        </TextView>

        <com.example.workoutbasic.dataedit.imageviews.WorkoutCommentView
            style="@style/Icon"
            android:src="@drawable/comment"
            android:id="@+id/comment"
            android:contentDescription="@string/Comment"
            android:layout_weight="@dimen/comment_weight"
            android:layout_height="wrap_content">
        </com.example.workoutbasic.dataedit.imageviews.WorkoutCommentView>

        <com.example.workoutbasic.dataedit.imageviews.WorkoutFileView
            style="@style/Icon"
            android:src="@drawable/file"
            android:id="@+id/file"
            android:contentDescription="@string/File"
            android:layout_weight="@dimen/file_weight">
        </com.example.workoutbasic.dataedit.imageviews.WorkoutFileView>
<!--        TODO: add parent to comment and file probably-->

    </LinearLayout>
</layout>
