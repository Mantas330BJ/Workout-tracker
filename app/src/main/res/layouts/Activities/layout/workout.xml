<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/Descriptor"
        android:id="@+id/date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        style="@style/Header"
        android:id="@+id/exerciseName"
        app:layout_constraintHorizontal_weight="1"
        android:text="@string/Exercise"
        app:layout_constraintEnd_toStartOf="@id/sets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date">
    </TextView>

    <TextView
        style="@style/Header"
        android:id="@+id/sets"
        app:layout_constraintHorizontal_weight="1"
        android:text="@string/Sets"
        app:layout_constraintEnd_toStartOf="@id/top_weight"
        app:layout_constraintStart_toEndOf="@id/exerciseName"
        app:layout_constraintTop_toBottomOf="@+id/date">
    </TextView>

    <TextView
        style="@style/Header"
        android:id="@+id/top_weight"
        app:layout_constraintHorizontal_weight="1"
        android:text="@string/Top_weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sets"
        app:layout_constraintTop_toBottomOf="@+id/date">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseName">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>